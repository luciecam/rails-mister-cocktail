render :'banner'

<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path('mojito.jpg') %>)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
  
  <br>
  <%= link_to "Add a new cocktail 🍸", new_cocktail_path %>
</div>