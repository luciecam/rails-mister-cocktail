<%= render 'shared/banner' %> 

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4 col-sm-12 col-lg-4 card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photos[0].key %>);">
        <%= link_to cocktail.name, cocktail_path(cocktail), class:"white-btn" %>
      </div>
    <% end %>
  </div>
</div>