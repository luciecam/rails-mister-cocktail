<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('mojito.jpg')%>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cocktail-details">
  
    <ul class="ingredients">
      <% @cocktail.doses.each do |dose| %>
      <li><strong><%= "#{dose.ingredient.name}" %></strong><%= " - #{dose.description} cl | " %><em><%= link_to "delete", dose_path(dose), method: :delete %></em></li>
      <% end %>
    </ul>
    <div class="add-ingredients">
      <h3>Add an ingredient</h3>
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>


  <br>


  <%= link_to "Back to cocktails list ğŸ¸", cocktails_path %>
</div>