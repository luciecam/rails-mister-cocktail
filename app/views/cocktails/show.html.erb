<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photos[0].key %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cocktail-details">
    <div class="cocktail-img">
      <% @cocktail.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 500, width: 400, crop: :fill %>
      <% end %>
    </div>  
    <ul class="ingredients">
      <% @cocktail.doses.each do |dose| %>
      <li><strong><%= "#{dose.ingredient.name}" %></strong><%= " - #{dose.description} cl | " %><em><%= link_to "delete", dose_path(dose), method: :delete %></em></li>
      <% end %>
    </ul>
    <div class="add-ingredients">
      <h3>Add an ingredient</h3>
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>


  <br>


  <%= link_to "Back to cocktails list ğŸ¸", cocktails_path %>
</div>
